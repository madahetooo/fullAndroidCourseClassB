<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.apps.fullcourseandroidclassb">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logocar"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logocar"
        android:supportsRtl="true"
        android:theme="@style/Theme.FullCourseAndroidClassB">

        <service
            android:name=".utils.FirebaseService"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <activity android:name=".ClothesApp"></activity>
        <activity android:name=".ui.base.SplashScreen" />
        <activity android:name=".utils.CoroutinesExamples" />
        <activity android:name=".ui.shoppinglist.ShoppingActivity" />
        <activity android:name=".ui.base.OnBoardingScreens" />
        <activity android:name=".utils.BroadcastReceiverExample" />
        <activity android:name=".utils.NotificationExample" /> <!-- <activity android:name=".ui.BullsCarsActivity" /> -->
        <activity android:name=".ui.base.HomeActivity" />
        <activity android:name=".ui.base.BaseActivity" />
        <activity android:name=".ui.loginsystem.RegistrationActivity" />
        <activity android:name=".ui.loginsystem.LoginActivity" /> <!-- <activity android:name=".ui.TodoListApplication" /> -->
        <activity
            android:name=".ui.others.MainActivity"
            tools:ignore="Instantiatable" /> <!-- <activity android:name=".ResturantMenu" /> -->
        <activity
            android:name=".ui.others.ImageViewExample"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".ui.others.Calculator"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".ui.others.Counter"
            tools:ignore="Instantiatable" />
        <activity android:name=".CloudMessagingApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>